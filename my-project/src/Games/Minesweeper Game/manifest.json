{
    "manifest_version": 3,
    "name": "Minesweeper Game Extension JS",
    "version": "1.0",
    "description": "Minesweeper game extension built in pure HTML CSS JS...",
    "author" : "sambitmondal2005@gmail.com",
    "icons": {
        "48": "minecraft-8-48.png",
        "128": "minecraft-8-128.png"
    },
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}